" DO NOT EDIT THIS FILE
" Add your own customizations in ~/.vim_runtime/my_configs.vim
" Enable block/beam cursor switching in iTerm2
if exists('$TERM_PROGRAM') && $TERM_PROGRAM =~ 'iTerm'
  let &t_SI = "\<Esc>]50;CursorShape=1\x7"  " Beam cursor in Insert mode
  let &t_EI = "\<Esc>]50;CursorShape=0\x7"  " Block cursor in Normal mode
  " (Optional) Replace mode cursor:
  let &t_SR = "\<Esc>]50;CursorShape=2\x7"  " Steady block in Replace mode
endif

set runtimepath+=~/.vim_runtime

source ~/.vim_runtime/vimrcs/basic.vim
source ~/.vim_runtime/vimrcs/filetypes.vim
source ~/.vim_runtime/vimrcs/plugins_config.vim
source ~/.vim_runtime/vimrcs/extended.vim
try
  source ~/.vim_runtime/my_configs.vim
catch
endtry

set relativenumber
set number
set rtp^="/Users/lukewang/.opam/default/share/ocp-indent/vim"
set tabstop=4
set shiftwidth=4
set expandtab
